<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_1App.PageResultado">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Resultados" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>

            <Label x:Name="rsNumeroUno" FontSize="Title" Padding="10,0,0,0"/>
            <Label x:Name="rsNumeroDos" FontSize="Title" Padding="10,0,0,0"/>
            <Label x:Name="rsResultado" FontSize="Title" Padding="10,0,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>